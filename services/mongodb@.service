[Unit]
Description="Mongo for sentinel api"

[Service]
ExecStartPre=-/usr/bin/docker kill mongodb
ExecStartPre=-/usr/bin/docker rm mongodb
ExecStartPre=/bin/bash -c "mkdir -p /srv/mongodb"
ExecStartPre=/usr/bin/docker pull mongo:3.0
ExecStart=/usr/bin/docker run --name mongodb -p 27017:27017 -v /srv/mongodb:/data/db mongo:3.0
ExecStop=/usr/bin/docker stop mongo

[X-Fleet]
Conflicts=mongodb@%i.service
