[Unit]
Description="Rabbitmq for sentinel api"

[Service]
ExecStartPre=-/usr/bin/docker kill rabbitmq
ExecStartPre=-/usr/bin/docker rm rabbitmq
ExecStartPre=/usr/bin/docker pull rabbitmq:3-management
ExecStart=/usr/bin/docker run --name rabbitmq  --hostname sentinel -p 5672:5672 -p 15672:15672 rabbitmq:3-management
ExecStop=/usr/bin/docker stop rabbitmq

[X-Fleet]
Conflicts=rabbitmq@%i.service
